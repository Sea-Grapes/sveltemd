{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "types": ["vite/client", "@sveltejs/kit"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
